{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}
	{% block navbar %}
		{% include 'includes/navbar.html.twig' %}
	{% endblock %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous etes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se Deconnecter</a>
			</div>
		{% endif %}
		<style>
			body {
				padding-top: 150px;
			}
		</style>
		<div class="container">
			<div class="row align-items-center">
				<div
					class="col-md-6 col-sm-12">
					<h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
					<form>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn btn-lg btn-primary w-100 " type="submit">Connexion</button>
						<div>
							<a href="/reset-password">Mot de passe oublié ?</a>
							<p>Vous n'avez pas de compte?<a href="/register">
									Inscrivez-vous</a>
							</p>
						</div>
					</form>
				</div>
				<div class="col-md-6 col-sm-12 text-center">
					<img class="illustration-img img-fluid" src="assets/images/login.svg" alt="Page de connexion">
				</div>
			</div>
		</div>
		{% block footer %}
			{% include 'includes/footer.html.twig' %}
		{% endblock %}
	{% endblock %}
