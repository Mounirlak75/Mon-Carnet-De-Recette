{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Détails de la Catégorie</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ categorie.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom de la catégorie</th>
                                <td>{{ categorie.name }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_admin_categorie_index') }}" class="btn btn-primary mt-3">Retour</a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning mt-3 ml-2">Modifier</a>
                    {{ include('admin_categorie/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
