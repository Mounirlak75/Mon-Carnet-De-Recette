{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-center mb-4">Détail de la recette</h2>

            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>ID</strong></div>
                <div>{{ recette.id }}</div>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>Nom de la recette</strong></div>
                <div>{{ recette.titre }}</div>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>Préparation</strong></div>
                <div>{{ recette.description }}</div>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>Temps de préparation</strong></div>
                <div>{{ recette.tempsDePreparation }}</div>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>Temps de cuisson</strong></div>
                <div>{{ recette.tempsDeCuisson }}</div>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>Difficulté</strong></div>
                <div>{{ recette.difficulte }}</div>
            </div>
            <div class="d-flex flex-wrap justify-content-between align-items-center border-bottom pb-3 mb-3">
                <div><strong>Ingredient</strong></div>
                <div>{{ recette.ingredient }}</div>
            </div>
            <div class="mt-3">
                <img src="{{ asset('assets/images/uploads/recettes/' ~ recette.imageName) }}" alt="{{ recette.titre }}" class="img-fluid"/>
            </div>

            <div class="mt-5 d-flex justify-content-between">
                <a href="{{ path('app_admin_recette_index') }}" class="btn btn-outline-primary">Retour</a>
                <div>
                    <a href="{{ path('app_admin_recette_edit', {'id': recette.id}) }}" class="btn btn-outline-warning">Modifier</a>
                    {{ include('admin_recette/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
