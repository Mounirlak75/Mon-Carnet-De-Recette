{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Contactez-nous</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Formulaire de Contact</div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.sujet, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.sujet) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.contenu, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                        {{ form_errors(form.contenu) }}
                    </div>

                    <div class="d-grid gap-2">
                        {{ form_widget(form.confirmation, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
