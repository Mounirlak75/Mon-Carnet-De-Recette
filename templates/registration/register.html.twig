{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% block navbar %}
		{% include 'includes/navbar.html.twig' %}
	{% endblock %}

	{% for flash_message in app.flashes('verify_email_success') %}
		<div class="alert alert-success" role="alert">{{ flash_message }}</div>
	{% endfor %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<style>
		body {
			padding-top: 150px;
		}
	</style>
	<div class=" container d-flex align-items-center justify-content-center" style="min-height: 50vh;">
		<div class="col-md-6">
			<h1 class="d-flex align-items-center justify-content-center">Inscription</h1>
			<p class="d-flex align-items-center justify-content-center">Rejoindre notre plateforme, c'est simple, sûr, confidentiel et
				<br>
				totalement gratuit !!</p>

			{{ form_errors(registrationForm, { 'attr': { 'class': 'alert alert-danger' } }) }}

			{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{{ form_label(registrationForm.name, 'Nom / Pseudo', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.plainPassword, 'Mot de Passe', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<div class="checkbox">
						{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input d-flex align-items-center justify-content-center'}}) }}
						{{ form_label(registrationForm.agreeTerms, 'J\'ai lu et j\'accepte les CGU et la politique de confidentialité ', {'label_attr': {'class': 'form-check-label d-flex align-items-center justify-content-center'}}) }}
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10 d-flex align-items-center justify-content-center">
					<button type="submit" class="btn btn-primary">Inscription</button>
				</div>
			</div>
		</div>
	</div>
	{{ form_end(registrationForm) }}
	{% block footer %}
		{% include 'includes/footer.html.twig' %}
	{% endblock %}
{% endblock %}
